<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.home.HomeFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_back"
                android:elevation="0dp"
                app:fabSize="normal"
                app:useCompatPadding="false"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_back"
                android:elevation="0dp"
                app:fabSize="normal"
                app:useCompatPadding="false"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_back"
                android:elevation="0dp"
                app:fabSize="normal"
                app:useCompatPadding="false"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_back"
                android:elevation="0dp"
                app:fabSize="normal"
                app:useCompatPadding="false"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_back"
                android:elevation="0dp"
                app:fabSize="normal"
                app:useCompatPadding="false"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_layout_favorite_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_corner_radius">

                <TextView
                    android:id="@+id/home_tv_favorite_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="즐겨찾는 게시판"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/home_tv_favorite_board_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:textSize="14sp"
                    android:text="더보기"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/home_tv_favorite_board"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_favorite_board"
                    app:layout_constraintRight_toLeftOf="@id/home_iv_favorite_board_more"/>

                <ImageView
                    android:id="@+id/home_iv_favorite_board_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintTop_toTopOf="@id/home_tv_favorite_board_more"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_favorite_board_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/purple_700" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_rv_favorite_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:spanCount="5"
                    app:layout_constraintTop_toBottomOf="@id/home_tv_favorite_board"
                    tools:listitem="@layout/recyclerview_favorite_board_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_layout_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_corner_radius">

                <TextView
                    android:id="@+id/home_tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실시간 인기 글"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/home_tv_popular_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:textSize="14sp"
                    android:text="더보기"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/home_tv_popular"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_popular"
                    app:layout_constraintRight_toLeftOf="@id/home_iv_popular_more"/>

                <ImageView
                    android:id="@+id/home_iv_popular_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintTop_toTopOf="@id/home_tv_popular_more"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_popular_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/purple_700" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_rv_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:spanCount="5"
                    app:layout_constraintTop_toBottomOf="@id/home_iv_popular_more"
                    tools:listitem="@layout/recyclerview_popular_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_layout_employ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rectangle_corner_radius">

                <TextView
                    android:id="@+id/home_tv_employ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채용 정보"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/home_tv_employ_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:textSize="14sp"
                    android:text="더보기"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/home_tv_employ"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_employ"
                    app:layout_constraintRight_toLeftOf="@id/home_iv_employ_more"/>

                <ImageView
                    android:id="@+id/home_iv_employ_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintTop_toTopOf="@id/home_tv_employ_more"
                    app:layout_constraintBottom_toBottomOf="@id/home_tv_employ_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/purple_700" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_rv_employ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:spanCount="5"
                    app:layout_constraintTop_toBottomOf="@id/home_iv_employ_more"
                    tools:listitem="@layout/recyclerview_employ_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>